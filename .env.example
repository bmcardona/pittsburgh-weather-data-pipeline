# ============================================================================
# POSTGRESQL - Container Configuration
# ============================================================================
# These are for the PostgreSQL container itself
POSTGRES_USER=postgres              # CHANGE THIS!
POSTGRES_PASSWORD=                  # CHANGE THIS!
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================================================
# WEATHER DATA - Database Configuration
# ============================================================================
WEATHER_DB_NAME=weather_db
WEATHER_DB_USER=weather_user
WEATHER_DB_PASSWORD=                # CHANGE THIS!
WEATHER_DB_HOST=postgres
WEATHER_DB_PORT=5432
WEATHER_DB_SCHEMA=public

# ============================================================================
# AIRFLOW - Database & Configuration
# ============================================================================
# Airflow will use its own database within the same PostgreSQL instance
AIRFLOW_DB_NAME=airflow_db
AIRFLOW_DB_USER=airflow_user
AIRFLOW_DB_PASSWORD=                # CHANGE THIS!

# Airflow Core Settings
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=          # CHANGE THIS!
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth

# Airflow Database Connection (Built from variables above)
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://${AIRFLOW_DB_USER}:${AIRFLOW_DB_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${AIRFLOW_DB_NAME}

# Airflow Admin User
AIRFLOW_ADMIN_USERNAME=             # CHANGE THIS!
AIRFLOW_ADMIN_PASSWORD=             # CHANGE THIS!
AIRFLOW__WEBSERVER__SECRET_KEY=     # CHANGE THIS!