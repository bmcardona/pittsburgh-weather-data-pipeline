# ============================================================================
# POSTGRESQL - Container Configuration
# ============================================================================
# These are for the PostgreSQL container itself
POSTGRES_USER=          # Superuser for PostgreSQL
POSTGRES_PASSWORD=   # Superuser password
POSTGRES_HOST=
POSTGRES_PORT=

# ============================================================================
# AIRFLOW - Database & Configuration
# ============================================================================
# Airflow will use its own database within the same PostgreSQL instance
AIRFLOW_DB_NAME=
AIRFLOW_DB_USER=
AIRFLOW_DB_PASSWORD=

# Airflow Core Settings
AIRFLOW_UID=
AIRFLOW__CORE__EXECUTOR=
AIRFLOW__CORE__FERNET_KEY=
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=
AIRFLOW__CORE__LOAD_EXAMPLES=
AIRFLOW__API__AUTH_BACKENDS=

# Airflow connection string
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://::/

# Airflow Admin User
AIRFLOW_ADMIN_USERNAME=
AIRFLOW_ADMIN_PASSWORD=

# ============================================================================
# WEATHER DATA - Database Configuration
# ============================================================================
# Your weather application will use a separate database
WEATHER_DB_NAME=
WEATHER_DB_USER=
WEATHER_DB_PASSWORD=
